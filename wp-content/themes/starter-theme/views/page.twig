{% extends "base.twig" %}

{% block content %}

	{% include 'partial/header.twig' with {
		hide_menu : true
	} %}

	<section class="header_images darkbg">
		<div class="container">
			<div class="row">
				<div class="col-12  text-center pt-10 md-pt-22">
					<h1 class="text54 black">{{post.title}}</h1>
				</div>
				<div class="col-12 text-center pt-8 pb-16 md-pb-10"></div>
			</div>
		</div>
	</section>
	<section class="darkbg">
		<div class="container">
			<div class="row">
				<div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
					<div class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
						<p>Last modified: {{ post.modified_date('F jS, Y') }}</p>
						{{ post.content }}
					</div>
				</div>
			</div>
		</div>
	</section>
	<div style="height: 10vh;" class=""></div>

	{% include 'partial/footer.twig' %}

{% endblock %}